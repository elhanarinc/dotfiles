syntax on
set exrc
set secure
set title
filetype plugin indent on

colorscheme zenburn

set autoindent
set si
set wrap

set number
set wildmenu
set showmatch
set autoread
set magic
set hlsearch

set noerrorbells
set novisualbell

set ffs=unix,dos,mac

set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set smarttab
set mouse=a

set nocompatible
set nostartofline
set esckeys
set backspace=indent,eol,start
set ttyfast

set encoding=utf-8 nobomb

noremap j gj
noremap k gk
